@page
@model SmokingCessationSupportPlatform.Web.Pages.Coach.PlanModel
@{
    Layout = "_LayoutNoHeader";
}


@section Head {
    <link rel="stylesheet" href="~/css/coach-dashboard.css" />
    <link rel="stylesheet" href="~/css/message.css" />
}

<div class="container mt-5">
    <h2 class="text-center mb-4 text-primary fw-bold">@ViewData["Title"]</h2>

    <p class="text-center mb-5 text-muted">
        💪 Hãy bắt đầu hành trình giúp học viên từ bỏ thuốc lá ngay hôm nay.<br />
        Mỗi kế hoạch bạn tạo ra là một cơ hội để thay đổi cuộc đời họ.
    </p>

    <div class="d-flex flex-column align-items-center">

        @foreach(var user in Model.listUser){
            <div class="card mb-4 shadow-sm user-card" style="width: 100%; max-width: 700px;">
                <div class="card-body d-flex align-items-center">
                    <img src="https://png.pngtree.com/element_our/20200610/ourlarge/pngtree-default-avatar-image_2237213.jpg" alt="Avatar Người dùng" class="rounded-circle me-3" width="60" height="60" />
                    <div class="flex-grow-1">
                        <h5 class="fw-bold text-primary mb-1">@user.FullName</h5>
                        <p class="mb-1">
                            <strong>Username:</strong> @user.Username <br />
                            <strong>Ngày sinh:</strong> @user.DateOfBirth?.ToString("dd/MM/yyyy") <br />
                            <strong>Giới tính:</strong> @user.Gender
                        </p>
                    </div>
                    <div class="ms-3 text-end">
                         <a href="/Coach/ListQuitProgressOfUser?userID=@user.UserId" class="btn btn-outline-primary btn-sm me-2">Xem</a>
                        <a href="/Coach/CreatePlan?userID=@user.UserId" class="btn btn-outline-warning btn-sm">Lên Kế Hoạch</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


<style>
    .user-card {
        transition: 0.3s ease;
        border-left: 5px solid transparent;
    }
    .user-card:hover {
        transform: scale(1.02);
        border-left: 5px solid #0d6efd;
        background-color: #f9f9f9;
    }
</style>