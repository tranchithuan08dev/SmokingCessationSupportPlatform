<header>
    <nav class="navbar navbar-expand-lg navbar-dark shadow-sm py-3 beautiful-navbar">
        <div class="container">
            <a class="navbar-brand fw-bold fs-4" asp-area="" asp-page="/Index">
                <img src="~/image/logo.png" alt="Logo" style="height: 40px;" />
                <span class="fw-bold fs-5 text-white brand-text">SmokingCessationPlatform</span>
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Membership" asp-action="Index">
                                <i class="bi bi-star me-1"></i>Membership
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Membership" asp-action="Status">
                                <i class="bi bi-person-check me-1"></i>My Status
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="SmokingStatus" asp-action="Index">
                                <i class="bi bi-activity me-1"></i> Tình trạng hút thuốc
                            </a>
                        </li>
                    }
                </ul>
                <div class="d-flex gap-2">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <span class="navbar-text text-light me-3">
                            <i class="bi bi-person-circle me-1"></i>@User.Identity.Name
                        </span>
                        <a class="btn btn-outline-light" asp-area="" asp-page="/Account/Logout">
                            <i class="bi bi-box-arrow-right me-1"></i> Logout
                        </a>
                    }
                    else
                    {
                        <a class="btn btn-outline-light" asp-area="" asp-page="/Account/Login">
                            <i class="bi bi-box-arrow-in-right me-1"></i> Login
                        </a>
                        <a class="btn btn-light text-primary fw-semibold" asp-area="" asp-page="/Account/Register">
                            <i class="bi bi-person-plus me-1"></i> Register
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>