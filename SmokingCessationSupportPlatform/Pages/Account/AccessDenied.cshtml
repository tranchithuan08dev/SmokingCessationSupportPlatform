@page
@model SmokingCessationSupportPlatform.Web.Pages.Account.AccessDeniedModel
@{
}
<header class="bg-light py-5">
    <div class="container px-5">
        <div class="row gx-5 justify-content-center">
            <div class="col-lg-8 col-xl-6">
                <div class="text-center mb-5">
                    <h1 class="display-1 fw-bolder text-danger">403</h1>
                    <p class="fs-3 fw-light text-muted mb-4">Access Denied</p>
                    <p class="lead text-dark mb-5">
                        <i class="bi bi-exclamation-triangle-fill text-warning me-2"></i>
                        You do not have permission to view this resource.
                        This might be because you are not logged in, or your account does not have the necessary privileges.
                    </p>
                    <div class="d-grid gap-3 d-sm-flex justify-content-sm-center">
                        <a class="btn btn-primary btn-lg px-4 me-sm-3" asp-page="/Index">
                            <i class="bi bi-house-door-fill me-2"></i>Go to Home
                        </a>
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <a class="btn btn-outline-primary btn-lg px-4" asp-page="/Account/Login">
                                <i class="bi bi-box-arrow-in-right me-2"></i>Login
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</header>
